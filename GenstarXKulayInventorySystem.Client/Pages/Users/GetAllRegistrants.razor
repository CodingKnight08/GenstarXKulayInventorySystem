@if (IsLoading)
{
    <MudCard Elevation="0" Class="w-100 h-50 d-flex flex-column gap-4 align-items-center justify-content-center">
        <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
        <MudText Typo="Typo.h6" Align="Align.Center">Loading registrants...</MudText>
    </MudCard>
}
else
{
    <MudCard Elevation="0" Class="w-100 py-5">
        <MudText Align="Align.Center" Typo="Typo.h6" >For Approval Users</MudText>   
    </MudCard>
    <MudTable Items="Applicants" Hover=true Bordered=true Elevation="10" Class="mx-2">
        <HeaderContent>
            <MudTh>UserName</MudTh>
            <MudTh>Email</MudTh>
            <MudTh>Branch</MudTh>
            <MudTh>Contact Number</MudTh>
            <MudTh>Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.FullName</MudTd>
            <MudTd>@context.Email</MudTd>
            <MudTd>@context.Branch</MudTd>
            <MudTd>@context.ContactNumber</MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Visibility" Color="Color.Primary" Size="Size.Small" />
                <MudIconButton Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" OnClick="()=> ApproveApplicant(context.Id, context.FullName)" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" />
            </MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Error"> No Applicants </MudText>
        </NoRecordsContent>
        <PagerContent>
            <MudTablePager HorizontalAlignment="HorizontalAlignment.Right" PageSizeOptions="[5,10,20]"/>
        </PagerContent>
    </MudTable>
}

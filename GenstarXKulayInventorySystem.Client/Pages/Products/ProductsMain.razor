@page "/products"
@page "/products/{Skip:int?}/{Take:int?}"
@using GenstarXKulayInventorySystem.Client.Pages.Products.ProductBrands
@using GenstarXKulayInventorySystem.Client.Pages.Products.ProductCategory
@layout MainLayout


<MudMainContent Class="bg-white w-auto" Style="height:100%;">
    
    <MudTabs Elevation="2" Rounded="false" ApplyEffectsToContainer="true" PanelClass="pa-6" Style="height:100%">
        <MudTabPanel Text="Product Brands">
           <GetAllProductBrands Skip="Skip"  Take="Take"/>
        </MudTabPanel>
        <MudTabPanel Text="Product Category">
            <GetAllProductCategory/>
        </MudTabPanel>
       
    </MudTabs>
</MudMainContent>

@code{
    [Parameter] public int? Skip { get; set; }
    [Parameter] public int? Take { get; set; }
}
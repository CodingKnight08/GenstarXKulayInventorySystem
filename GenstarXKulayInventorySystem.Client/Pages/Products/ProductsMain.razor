@page "/products"
@using GenstarXKulayInventorySystem.Client.Pages.Products.ProductBrands
@using GenstarXKulayInventorySystem.Client.Pages.Products.ProductCategory
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@layout MainLayout
@attribute [Authorize]

<AuthorizeView Roles="Admin,Secretary,User">


<MudMainContent Class="bg-white w-auto" Style="height:100vh;">
    
    <MudTabs Elevation="0" Rounded="false" ApplyEffectsToContainer="true" PanelClass="pa-6" Style="height:auto">
        <MudTabPanel Text="Product Brands">
            <GetAllProductBrands/>
        </MudTabPanel>
        <MudTabPanel Text="Product Category">
            <GetAllProductCategory/>
        </MudTabPanel>
       
    </MudTabs>
</MudMainContent>
</AuthorizeView>

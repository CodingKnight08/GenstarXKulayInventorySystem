<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body1">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="() => MudDialog.Close(DialogResult.Ok(true))" Color="@Color">@ButtonText</MudButton>
        <MudButton Variant="Variant.Filled" OnClick="() => MudDialog.Cancel()" Color="Color.Default">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public string ContentText { get; set; } = "Are you sure?";
    [Parameter] public string ButtonText { get; set; } = "Yes";
    [Parameter] public Color Color { get; set; } = Color.Error;
}
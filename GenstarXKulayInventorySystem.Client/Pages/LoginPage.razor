@using MudBlazor
@page "/"
@layout LoginLayout

<MudPaper Height="100vh" Width="100vw" Class="bg-secondary d-flex flex-column align-items-center justify-content-center">
    <MudCard Elevation="25" Square=true style="min-width:20%;height:50%;background-color:white;" Class="border-2 rounded-3 d-flex flex-column align-items-center justify-content-center">
        <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-5">Inventory System</MudText>
        <div class="d-flex flex-row align-items-center mb-3">
            <span class="material-icons me-2" style="font-size:2rem;">person</span>
            <input type="text" class="form-control flex-grow-1" placeholder="Username"  @bind-value="User.Username"/>
        </div>
        @if (ShowValidation && string.IsNullOrWhiteSpace(User.Username))
        {
            <small class="text-danger mb-2">Username is required.</small>
        }
        <div class="d-flex flex-row align-items-center mb-4">
            <span class="material-icons me-2" style="font-size:2rem;">lock</span>
            <input type="password" class="form-control flex-grow-1" placeholder="Password" @bind-value="User.Password" />
        </div>
        @if (ShowValidation && string.IsNullOrWhiteSpace(User.Password))
        {
            <small class="text-danger mb-2">Password is required.</small>
        }
        <MudButton Style="width:70%;background-color:#0cc54c;" class="rounded-3 mb-3 p-1 text-white fw-bold" OnClick="Login">Login</MudButton>
        <MudButton Style="width:70%;" Class="rounded-3 p-1">Sign-up</MudButton>
    </MudCard>
</MudPaper>



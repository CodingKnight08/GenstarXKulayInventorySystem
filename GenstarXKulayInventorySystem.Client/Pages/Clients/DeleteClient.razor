@if(IsLoading){

    <MudDialog>
        <DialogContent>
            <MudCard Elevation="0" Class="d-flex flex-column align-items-center justify-content-center gap-2">
                <MudProgressCircular Color="Color.Primary" Size="Size.Medium" Indeterminate="true" />
                <MudText Typo="Typo.h6" Class="mt-2">Loading...</MudText>
            </MudCard>

        </DialogContent>
    </MudDialog>
}
else
{
    <MudDialog>
        <DialogContent>
            <MudCard Elevation="0">
                <MudText Align="Align.Center">Are you sure you want to delete client <strong class="text-danger">@Client.ClientName</strong> information?</MudText>

            </MudCard>
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" Size="Size.Small" Color="Color.Default" OnClick="Cancel">Cancel</MudButton>
            <MudButton Variant="Variant.Filled" Size="Size.Small" Color="Color.Error" OnClick="DeleteClientAsync" StartIcon="@Icons.Material.Filled.Delete">Delete</MudButton>

        </DialogActions>
    </MudDialog>
    
}